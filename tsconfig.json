{
  "include": ["src/**/*"],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "lib": ["DOM", "ES2021"],
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true
  }
}
